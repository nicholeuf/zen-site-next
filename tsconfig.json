{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Add vitest globals so `describe`, `it`, `expect` are recognized by TS
    "types": ["vitest/globals", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "utils/*": ["./utils/*"],
      "test-utils": ["./utils/test-utils"],
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    // Exclude Storybook config and story files from the TypeScript build/check
    ".storybook",
    "**/*.stories.*",
    "src/**/.storybook/**",
    "src/**/*.stories.*"
  ]
}
