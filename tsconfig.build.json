{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/*.stories.*",
    "src/**/.storybook/**",
    "**/*.test.*",
    "**/*.spec.*",
    "tests",
    "utils"
  ]
}
